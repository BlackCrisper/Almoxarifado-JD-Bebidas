@model  JD_BebidasProjeto.Models.PRODUTO


@{
    ViewBag.Title = "Editar";
}

<h2>Editando</h2>

<div>
    <form action="/Produto/Edit?id=@Model.PROID" method="post">
        <div>
            <class ="form-group">
                <label for="descricao">Descrição</label>
                <input type="text" class="form-control"
                       maxlength="100" id="descricao" name="descricao"
                       value="@Model.PRODESCRICAO"
                       required />
        </div>
      
        <div>
        


                <div>
                    <button type="submit" class="btn btn-success">Salvar</button>
                    <a href="/produto/index" class="btn btn-primary">Voltar</a>

                </div>


        </div>
    </form>
</div>