@model  JD_BebidasProjeto.Models.TIPO


@{
    ViewBag.Title = "Editar";
}

<h2>Editando</h2>

<div>
    <form action="/Tipo/Editar?id=@Model.TIPID" method="post">
        <div>
            <class ="form-group">
                <label for="descricao">Descrição</label>
                <input type="text" class="form-control"
                       maxlength="100" id="descricao" name="descricao"
                       value="@Model.TIPNOME"
                       required />
        </div>
      
        <div>
        


                <div>
                    <button type="submit" class="btn btn-success">Salvar</button>
                    <a href="/Tipo/index" class="btn btn-primary">Voltar</a>

                </div>


        </div>
    </form>
</div>